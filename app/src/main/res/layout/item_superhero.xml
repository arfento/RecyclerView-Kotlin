<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="8dp"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/img_item_foto"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:id="@+id/txt_item_name"
            android:layout_toRightOf="@+id/img_item_foto"
            android:layout_toEndOf="@+id/img_item_foto"
            android:textSize="16dp"
            android:textStyle="bold"
            tools:hint="@tools:sample/full_names"
            />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txt_item_name"
            android:layout_marginHorizontal="16dp"
            android:layout_toEndOf="@id/img_item_foto"
            android:layout_toRightOf="@id/img_item_foto"
            android:ellipsize="end"
            tools:hint="@tools:sample/lorem/random"
            android:maxLines="5" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>